{
  "name": "voice2text",
  "version": "0.1.0",
  "description": "A beautiful voice-to-text app with OpenCode integration",
  "main": "electron.js",
  "homepage": "./",
  "dependencies": {
    "@speechly/speech-recognition-polyfill": "^1.1.0",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "react": "^17.0.2",
    "react-confirm-alert": "^2.8.0",
    "react-dom": "^17.0.2",
    "react-speech-recognition": "^3.9.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "react-scripts": "^5.0.1",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.voice2text.app",
    "productName": "Voice2Text",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "electron.js"
    ],
    "linux": {
      "target": [
        {
          "target": "flatpak",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility"
    }
  }
}
